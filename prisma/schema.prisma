datasource db {
  url       = env("DATABASE_PRISMA_URL")
  provider  = "mysql"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String @unique @db.VarChar(20)
  username     String @db.VarChar(32)
  tokenVersion Int    @default(0) @map("token_version") @db.SmallInt()

  connectionStrings ConnectionString[]

  @@map("users")
}

model ConnectionString {
  id        String   @id @default(dbgenerated("(UUID())")) @db.VarChar(36)
  value     String   @db.Char(10)
  createdAt DateTime @default(dbgenerated("CURRENT_TIMESTAMP(3)")) @map("created_at")
  ownerId   String   @map("owner_id") @db.VarChar(20)
  deleted   Boolean  @default(false)

  owner User @relation(fields: [ownerId], references: [id])

  @@map("connection_strings")
}
